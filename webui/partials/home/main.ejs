<!-- Main Home Content -->
<div id="home-content">
    <!-- User Info and Quest Section -->
    <div class="big-box">
        <div class="small-box">
            <h2 class="text-container">User Info</h2>
            <div class="info-card" id="userinfo">
                <div class="info-card-data">
                    username:
                    <span id="username">çıkaramadım abi kimsin sen</span>
                </div>

                <div class="info-card-data">
                    Nickname:
                    <span id="usernick">çıkaramadım abi kimsin sen</span>
                </div>

                <div class="info-card-data">
                    Farm Bot Status: <span id="bot-status">Stopped</span>
                </div>

                <div class="info-card-data">
                    WebSocket Status:
                    <span id="ws-status">Disconnected</span>
                </div>
            </div>
        </div>

        <div class="small-box">
            <h2 class="text-container">Quest</h2>
            <div class="quest-card" id="quest">
                <div class="quest-card-data">
                    <span id="quest-title">Waiting...</span>
                </div>

                <div class="quest-card-data">
                    <span id="quest-reward">Waiting...</span>
                </div>

                <div class="quest-card-data">
                    <span id="quest-progress">Waiting...</span>
                </div>
            </div>
        </div>

        <div class="small-box">
            <div class="actions-section" id="actions">
                <h2 class="text-container">Actions</h2>
                <div class="action-btns">
                    <button class="btn btn-success btn-custom" onclick="sendAction('start')">
                        Start
                    </button>
                    <button class="btn btn-info btn-custom" onclick="sendAction('pause')">
                        Pause
                    </button>
                    <button class="btn btn-warning btn-custom" onclick="sendAction('resume')">
                        Resume
                    </button>
                    <button class="btn btn-danger btn-custom" onclick="showrebootalertPopup()">
                        Reboot
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <h2 class="text-container">Stats</h2>
    <div class="stats-grid">
        <div class="stat-box">
            <span id="hunt-value" class="value">0</span>
            <span class="label">Hunt</span>
        </div>
        <div class="stat-box">
            <span id="battle-value" class="value">0</span>
            <span class="label">Battle</span>
        </div>
        <div class="stat-box">
            <span id="pray-value" class="value">0</span>
            <span class="label">Pray</span>
        </div>
        <div class="stat-box">
            <span id="curse-value" class="value">0</span>
            <span class="label">Curse</span>
        </div>
        <div class="stat-box">
            <span id="huntbot-value" class="value">0</span>
            <span class="label">Huntbot</span>
        </div>
        <div class="stat-box">
            <span id="vote-value" class="value">0</span>
            <span class="label">Vote</span>
        </div>
        <div class="stat-box">
            <span id="giveaway-value" class="value">0</span>
            <span class="label">Giveaway</span>
        </div>
        <div class="stat-box">
            <span id="captcha-value" class="value">0</span>
            <span class="label">Captcha</span>
        </div>
        <div class="stat-box">
            <span id="slot-value" class="value">0</span>
            <span class="label">Slot</span>
        </div>
        <div class="stat-box">
            <span id="coinflip-value" class="value">0</span>
            <span class="label">Coinflip</span>
        </div>
        <div class="stat-box override">
            <span id="cowoncywon-value" class="value">0</span>
            <span class="label">Cowoncy won by gambling</span>
        </div>
        <div class="stat-box highlight">
            <span id="solvedcaptcha-value" class="value">0</span>
            <span class="label">Solved Captcha</span>
        </div>
    </div>
</div>